# Nginx configuration example cho CCCD API
# Copy to /etc/nginx/sites-available/cccd-api và symlink to sites-enabled

upstream cccd_api {
    server 127.0.0.1:8000;
    keepalive 32;
}

server {
    listen 80;
    server_name your-domain.com;  # Thay bằng domain của bạn

    # Logging
    access_log /var/log/nginx/cccd-api-access.log;
    error_log /var/log/nginx/cccd-api-error.log;

    # Security headers (đã có trong Flask, nhưng thêm ở Nginx để chắc chắn)
    add_header X-Content-Type-Options "nosniff" always;
    add_header X-Frame-Options "DENY" always;
    add_header X-XSS-Protection "1; mode=block" always;
    
    # Remove Server header
    more_clear_headers 'Server';

    # Rate limiting (bổ sung cho Flask-Limiter)
    limit_req_zone $binary_remote_addr zone=api_limit:10m rate=100r/m;
    limit_req zone=api_limit burst=20 nodelay;

    # Max body size
    client_max_body_size 10k;  # CCCD chỉ cần 12 số + JSON overhead

    location / {
        proxy_pass http://cccd_api;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
        
        # Timeouts
        proxy_connect_timeout 60s;
        proxy_send_timeout 60s;
        proxy_read_timeout 60s;
    }

    # Health check endpoint (không rate limit)
    location /health {
        proxy_pass http://cccd_api;
        access_log off;
    }
}

