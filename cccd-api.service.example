# Systemd service file cho CCCD API
# Copy to /etc/systemd/system/cccd-api.service
# Usage: sudo systemctl start cccd-api

[Unit]
Description=CCCD API Service
After=network.target

[Service]
Type=notify
User=www-data
Group=www-data
WorkingDirectory=/path/to/cccd-api
Environment="PATH=/path/to/cccd-api/venv/bin"
ExecStart=/path/to/cccd-api/venv/bin/gunicorn \
    -w 4 \
    -b 127.0.0.1:8000 \
    --access-logfile /var/log/cccd-api/access.log \
    --error-logfile /var/log/cccd-api/error.log \
    --log-level info \
    --timeout 120 \
    --graceful-timeout 30 \
    --keep-alive 5 \
    wsgi:app
ExecReload=/bin/kill -s HUP $MAINPID
Restart=always
RestartSec=10

# Security
NoNewPrivileges=true
PrivateTmp=true

# Logging
StandardOutput=append:/var/log/cccd-api/app.log
StandardError=append:/var/log/cccd-api/error.log

[Install]
WantedBy=multi-user.target
